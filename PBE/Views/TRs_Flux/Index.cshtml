                    /**/

                    { name: 'DESCRIPTION', type: 'string' },
                    { name: 'I', type: 'bool' },
                    { name: 'FS', type: 'bool' },
                    { name: 'Note', type: 'string' },
                    { name: 'V', type: 'bool' },
                    { name: 'Electronique', type: 'bool' },
                    { name: 'Delais', type: 'number' },

                    /**/
                    {
                        name: 'Code_Type_Document',
